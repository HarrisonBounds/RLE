<!-- NOT FINISHED YET -->

<mujoco model="jackal_with_velodyne">
  <compiler angle="degree" coordinate="local"/>
  <option gravity="0 0 -9.81"/>

  <default>
    <joint damping="1"/>
    <geom friction="1 0.5 0.5" density="1000"/>
  </default>

  <worldbody>

    <body name="base_link" pos="0 0 0.1">
      <geom type="box" size="0.3 0.2 0.1" rgba="0.3 0.3 0.3 1"/>
      <!-- Visualize the robot body -->

      <!-- 4 wheels -->
      <body name="front_left_wheel" pos="0.2 0.15 0">
        <joint name="front_left_wheel_joint" type="hinge" axis="0 1 0"/>
        <geom type="cylinder" size="0.05 0.02" rgba="0.1 0.1 0.1 1"/>
      </body>

      <body name="front_right_wheel" pos="0.2 -0.15 0">
        <joint name="front_right_wheel_joint" type="hinge" axis="0 1 0"/>
        <geom type="cylinder" size="0.05 0.02" rgba="0.1 0.1 0.1 1"/>
      </body>

      <body name="rear_left_wheel" pos="-0.2 0.15 0">
        <joint name="rear_left_wheel_joint" type="hinge" axis="0 1 0"/>
        <geom type="cylinder" size="0.05 0.02" rgba="0.1 0.1 0.1 1"/>
      </body>

      <body name="rear_right_wheel" pos="-0.2 -0.15 0">
        <joint name="rear_right_wheel_joint" type="hinge" axis="0 1 0"/>
        <geom type="cylinder" size="0.05 0.02" rgba="0.1 0.1 0.1 1"/>
      </body>

      <!-- Velodyne lidar mount -->
      <body name="velodyne_mount" pos="0 0 0.25">
        <geom type="cylinder" size="0.05 0.02" rgba="0 0.5 1 1"/>
        <!-- Optionally attach a sensor here -->
      </body>

    </body>

  </worldbody>

  <actuator>
    <motor joint="front_left_wheel_joint" gear="100"/>
    <motor joint="front_right_wheel_joint" gear="100"/>
    <motor joint="rear_left_wheel_joint" gear="100"/>
    <motor joint="rear_right_wheel_joint" gear="100"/>
  </actuator>

</mujoco>
